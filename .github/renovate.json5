{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "automergeType": "branch",
  "commitMessagePrefix": "[{{packageFileDir}}] {{semanticPrefix}}",
  // Support for VSCode devcontainer.json Docker images
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(_(?<build>\\d+))?(-(?<compatibility>.*))?$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "maven"
      ],
      "versioning": "regex:^(?<minor>\\d+)(\\.(?<patch>\\d+))?(\\.(?<build>\\d+))?-eclipse-temurin-(?<major>\\d+)-focal"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.?devcontainer.json$"
      ],
      "matchStrings": [
        "\"image\" *: *\"(?<depName>.+?):(?<currentValue>.+?)\",?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "(^|/|\\.)pom\\.xml$"
      ],
      "matchStrings": [
        "<maven\\.compiler\\.release>(?<currentValue>.*?)<\\/maven\\.compiler\\.release>"
      ],
      "depNameTemplate": "eclipse-temurin",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:(?<major>\\d+).*"
    }
  ]
}