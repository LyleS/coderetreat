{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "mvn test-compile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "mvn test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Validate Bootstrap",
            "type": "shell",
            "command": "mvn test | tee /dev/stderr | grep -q 'Tests run: 1, Failures: 1, Errors: 0, Skipped: 0'"
        }
    ]
}